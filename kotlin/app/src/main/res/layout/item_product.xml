<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <android.support.v7.widget.CardView
            android:id="@+id/cvItemProduct"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="95dp">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp" app:srcCompat="@drawable/ic_sales2"
                    android:id="@+id/ivProduct"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/ic_cart"
                    android:id="@+id/ivProduct2"
                    android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AAA"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="68dp"/>

            <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="150dp"
                    android:layout_height="18dp"
                    android:text="AAA"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="#FF0000"
                    android:fontFamily="@font/lato_regular"
                    android:layout_marginTop="2dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvAddress"
                    app:layout_constraintStart_toEndOf="@+id/tvDistance2"
                    android:layout_marginStart="8dp"/>

            <TextView
                    android:id="@+id/tvBranchName"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:text="TiKi"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvName"/>
            <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:text="TiKi"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/lato_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/tvBranchName"/>

            <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/material"
                    android:text=""
                    android:textColor="#FFA500"
                    android:textSize="30sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Distance"
                    android:textColor="#FFA500"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.511"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textView27"/>
            <TextView
                    android:id="@+id/tvDistance2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="Giá:"
                    android:textColor="@color/colorText"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="68dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/tvAddress"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>